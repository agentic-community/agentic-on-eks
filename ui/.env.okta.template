# OKTA Authentication Mode Configuration Template
# Copy this file to .env.okta and update with your actual OKTA credentials

# Authentication Mode Configuration
DEMO_MODE=false

# Demo User Configuration (not used in OKTA mode)
DEMO_USER_EMAIL=demo@company.com
DEMO_USER_NAME=Demo User
DEMO_USER_ID=demo-user-001

# OKTA Configuration for UI Authentication (Browser-based)
# UPDATE THESE WITH YOUR ACTUAL OKTA VALUES
OKTA_DOMAIN=your-domain.okta.com
OKTA_AUTH_SERVER_ID=
OKTA_CLIENT_ID=your-agent-ui-app-client-id
OKTA_CLIENT_SECRET=your-agent-ui-app-client-secret
OKTA_REDIRECT_URI=http://localhost:8501
OKTA_SCOPE=openid profile email
OKTA_AUDIENCE=

# Admin Agent Configuration
ADMIN_HOST=admin-agent-service.default.svc.cluster.local
ADMIN_PORT=8080